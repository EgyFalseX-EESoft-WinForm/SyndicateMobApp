<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SyndicateMobApp.Pages.LoginPage">
  <StackLayout VerticalOptions="CenterAndExpand">
    <StackLayout.BindingContext>
      <!--<local:KeypadViewModel />-->
    </StackLayout.BindingContext>
    <Label Text="الاعضاء: قم بأدخال رقم العضوية" TextColor="Lime" FontAttributes="Bold" HorizontalTextAlignment="End"></Label>
    <Label Text="الورثة: قم بأدخال كود الفيزا" TextColor="Lime" FontAttributes="Bold" HorizontalTextAlignment="End"></Label>
    <Entry x:Name="EntyId" Text="{Binding InputString}" Placeholder="ادخل رقمك هنا" HorizontalTextAlignment="Center"></Entry>
    <Button x:Name="BtnLogin" Command="{Binding LoginCommand}" Text="دخـــــول"  Clicked="BtnLogin_OnClicked" > </Button>
  </StackLayout>
</ContentPage>