             <Label x:Name="WebsiteLabel" Text="مـوقــــع النقـــــابـة" TextColor="Lime" />
             
           </StackLayout>
         </ListView.Footer>
         <ListView.ItemTemplate>
           <DataTemplate>
             <ImageCell Text="{Binding Title}" ImageSource="{Binding IconSource}" IsEnabled="{Binding Visible}">
               <!--ImageSource="{helpers:ImageResource {Binding IconSource}}"-->
               <!--ImageSource="{helpers:ImageResource SyndicateMobApp.Resources.Bank32.png}"-->
               <!--"{Binding IconSource}"-->
             </ImageCell>
             
